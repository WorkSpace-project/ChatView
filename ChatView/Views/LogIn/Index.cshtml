@using ChatView.Models.DataContext;
@model Mcustomer
@{
    Layout = null;
}
<html lang="en">
<!-- Mirrored from coderthemes.com/ubold/layouts/material-horizontal/pages-login.html by HTTrack Website Copier/3.x [XR&CO'2014], Sat, 15 Feb 2020 10:28:33 GMT -->
<head>
    <meta charset="utf-8">
    <title>Chat View</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
    <meta content="Coderthemes" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- App css -->
    <link href="~/css/app.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/icons.min.css" rel="stylesheet" />

</head>

<body class="authentication-bg authentication-bg-pattern">
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-pattern">
                        <div class="card-body p-4">
                            <div class="text-center w-75 m-auto">
                                <a href="index.html">
                                    <span><img src="~/images/Chat.png" alt="" height="80" width="120"></span>
                                </a>
                                <p class="text-muted mb-4 mt-3">Enter your Customer Number and Password to Chat & Video Call.</p>
                            </div>
                            <form id="logindata">
                                <div class="form-group mb-3">
                                    <label for="emailaddress">Customer Number</label>
                                    @if (Model.CustomerCode != null)
                                    {
                                        <input class="form-control" value="@Model.CustomerCode" type="email" id="email" required="" placeholder="Enter your email">
                                    }
                                    else
                                    {
                                        <input class="form-control" type="email" id="email" required="" placeholder="Enter your email">
                                    }
                                </div>

                                <div class="form-group mb-3">
                                    <label for="password">Password</label>
                                    @if (Model.Password != null)
                                    {
                                        <input class="form-control" type="password" value="@Model.Password" required="" id="password" placeholder="Enter your password">
                                    }
                                    else
                                    {
                                        <input class="form-control" type="password" required="" id="password" placeholder="Enter your password">
                                    }
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input logincheckbox" value="true" id="remember" checked="">
                                        <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                                    </div>
                                </div>
                            </form>
                            <div class="form-group mb-0 text-center">
                                <button class="btn btn-primary btn-block" type="submit" onclick="LogIn()"> Log In </button>
                            </div>
                            <div class="form-group mb-0 text-center">
                                <span style="color:red" id="msg"></span>
                            </div>
                        </div> <!-- end card-body -->
                    </div>
                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>

</body>
</html>
<script src="~/js/vendor.min.js"></script>
<script src="~/js/app.min.js"></script>
<script src="~/js/Custom/LogIn.js"></script>